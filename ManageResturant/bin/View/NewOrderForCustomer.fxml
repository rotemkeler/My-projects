<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.NewOrderForCustomerController">
   <children>
      <AnchorPane fx:id="newOrder" prefHeight="500.0" prefWidth="500.0">
         <children>
            <Label layoutX="136.0" layoutY="62.0" prefHeight="40.0" prefWidth="214.0" text="Add New Order:" textFill="#efb81e">
               <font>
                  <Font name="System Bold Italic" size="28.0" />
               </font>
            </Label>
            <Button layoutX="22.0" layoutY="21.0" mnemonicParsing="false" onAction="#toMainCustomerScene" prefHeight="25.0" prefWidth="55.0" text="Back" />
            <Label layoutX="162.0" layoutY="167.0" text="Choose Dishes:">
               <font>
                  <Font name="System Bold" size="23.0" />
               </font>
            </Label>
            <ListView fx:id="chooseDishes" layoutX="34.0" layoutY="218.0" prefHeight="179.0" prefWidth="432.0" />
            <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="350.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/logo.PNG" />
               </image>
            </ImageView>
            <ImageView fx:id="customerPhoto" fitHeight="92.0" fitWidth="101.0" layoutX="14.0" layoutY="56.0" pickOnBounds="true" preserveRatio="true" />
            <Button layoutX="222.0" layoutY="430.0" mnemonicParsing="false" onAction="#saveOrder" prefHeight="25.0" prefWidth="55.0" text="Save" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
