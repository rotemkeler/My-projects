            <Label layoutX="52.0" layoutY="147.0" prefHeight="49.0" prefWidth="434.0" text="Please select a component from the list:">
               <font>
                  <Font size="23.0" />
               </font>
            </Label>
            <ComboBox fx:id="componentsList" layoutX="61.0" layoutY="237.0" prefHeight="25.0" prefWidth="379.0" />
            <ImageView fitHeight="146.0" fitWidth="143.0" layoutX="357.0" layoutY="-1.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/logo.PNG" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
