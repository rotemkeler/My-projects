<AnchorPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.RemoveComponentController">
   <children>
      <AnchorPane fx:id="removeComponentScreen" layoutX="2.0" layoutY="2.0" prefHeight="500.0" prefWidth="500.0">
         <children>
            <Label layoutX="101.0" layoutY="71.0" prefHeight="40.0" prefWidth="275.0" text="Remove Component:" textFill="#efb81e">
               <font>
                  <Font name="System Bold Italic" size="28.0" />
               </font>
            </Label>
            <Button fx:id="back" layoutX="29.0" layoutY="22.0" mnemonicParsing="false" onAction="#removeComponentSceneToMainScene" prefHeight="25.0" prefWidth="61.0" text="Back" />
